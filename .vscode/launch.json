{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        // launches main() from ./src/manuscript2slides/cli.py        
        {
            "name": "CLI manuscript2slides Dev",
            "type": "debugpy",
            "request": "launch",
            "console": "integratedTerminal",
            "module": "manuscript2slides.cli",
            "args": [
                "--demo-round-trip",
            ],
            "env": {
                "PYTHONPATH": "${workspaceRoot}",
                "MANUSCRIPT2SLIDES_DEBUG": "true" // set the env variable per venv run
            }
        },
        // launches main() from ./src/manuscript2slides/gui.py
        {
            "name": "GUI manuscript2slides Dev",
            "type": "debugpy",
            "request": "launch",
            "module": "manuscript2slides.gui",
            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH": "${workspaceRoot}",
                "MANUSCRIPT2SLIDES_DEBUG": "true"
            }
        },
        // launches main() from ./src/manuscript2slides/__main__.py
        {
            "name": "manuscript2slides round trip",
            "type": "debugpy",
            "request": "launch",
            "module": "manuscript2slides",
            "console": "integratedTerminal",
            "args": [
                "--cli",
                "--demo-round-trip"
            ],
            "env": {
                "PYTHONPATH": "${workspaceRoot}",
                "MANUSCRIPT2SLIDES_DEBUG": "true"
            }
        },
    ]
}