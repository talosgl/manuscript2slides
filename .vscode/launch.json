{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        // launches main() from ./src/manuscript2slides/cli.py        
        {
            "name": "CLI manuscript2slides Dev",
            "type": "debugpy",
            "request": "launch",
            "console": "integratedTerminal",
            "module": "manuscript2slides.cli",
            "args": [
                //"--input-pptx=src/manuscript2slides/resources/sample_slides_output.pptx",
                //"--input-docx=src/manuscript2slides/resources/sample_doc.docx"
                "--input-docx=C:/dev/manuscript2slides/tests/data/test_formatting.docx"
            ],
            "env": {
                "PYTHONPATH": "${workspaceRoot}",
                "MANUSCRIPT2SLIDES_DEBUG": "true" // set the env variable per venv run
            }
        },
        // launches main() from ./src/manuscript2slides/gui.py
        {
            "name": "GUI manuscript2slides Dev",
            "type": "debugpy",
            "request": "launch",
            "module": "manuscript2slides.gui",
            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH": "${workspaceRoot}",
                "MANUSCRIPT2SLIDES_DEBUG": "true"
            }
        },
        // launches main() from ./src/manuscript2slides/cli.py
        {
            "name": "CLI round trip demo",
            "type": "debugpy",
            "request": "launch",
            "module": "manuscript2slides.cli",
            "console": "integratedTerminal",
            "args": [
                "--demo-round-trip",
            ],
            "env": {
                "PYTHONPATH": "${workspaceRoot}",
                "MANUSCRIPT2SLIDES_DEBUG": "true"
            }
        },
        {
            "name": "pytest - Current File",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": [
                "${file}",
                "-v",
                "-s",
                "--log-file=pytest_debug.log", // This logs manuscript2slides's logs, not pytest's
                "--log-file-level=DEBUG"
            ],
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "pytest all",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": [
                "tests/",
                "-v",
                "-s",
                "--log-file=pytest_debug.log",
                "--log-file-level=DEBUG"
            ],
            "console": "integratedTerminal",
            "justMyCode": false
        }
    ]
}